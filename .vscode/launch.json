{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Config",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": ["-c", "${workspaceFolder}/config/colav_gateway_config.json"],
            "console": "integratedTerminal", 
            "python": "/usr/bin/python3",
            "env": {
                "ROS_DISTRO": "humble",
                "ROS_ROOT": "/opt/ros/humble/share/ros",
                "PYTHONPATH": "/opt/ros/humble/lib/python3.10/site-packages:~/ros2_ws/src/colav_server/colav_gateway/bin"
            }
        }
    ]
}
